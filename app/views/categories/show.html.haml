#category-title.page-title
    %h2= @category.title
.categories-dropdown
    .button.categories
        Categories
        .fa.fa-sort-desc
    .categories-list
        = link_to "All Categories", posts_path
        - @categories.each do |category|
            = link_to category.title, category

#posts
    - @posts.each do |post|
        .post
            %h2.title= link_to post.title, post
            %p.date
                published : 
                = time_ago_in_words(post.created_at)
                by
                = post.user.email